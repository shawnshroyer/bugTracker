@using bugTracker.Helpers
@model bugTracker.Models.Project

@{
    var projectHelper = new ProjectsHelper();
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { @id = "editProjectForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="x_panel">
        <div class="x_title">
            <h2>Edit Project</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Created, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.Created, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Created, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Assign Users to this Project</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="">
                                <ul class="to_do">
                                    @foreach (var user in ViewBag.Users)
                                    {
                                        <li>
                                            @if (projectHelper.IsUserOnProject(user.Id, Model.Id))
                                            {
                                                @Html.CheckBox("userId", true, new {@value=$"{user.Id}", @class = "flat" })
                                                @Html.Label($"{user.LastName}, {user.FirstName}")
                                            }
                                            else
                                            {
                                                @Html.CheckBox("userId", false, new {@id=$"{user.Id}", @value = $"{user.Id}", @class = "flat" })
                                                @Html.Label($"{user.LastName}, {user.FirstName}")
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11">
                        <input id="editPrjBtn" type="button" value="Save" class="btn btn-default btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}


@section scripts
{
    <script>
        $("#editPrjBtn").click(function () {
            $('<input type="hidden" name="Id" value=@Model.Id>').appendTo("#cngUserForm");
            $("#editProjectForm").submit();
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")\

}
