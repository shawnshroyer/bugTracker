@using bugTracker.Models
@model bugTracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "registerForm", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h1>Registration Form</h1>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.DisplayName, new { placeholder = "Display Name", @class = "form-control" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control", id = "regEmail" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", id = "regPassword" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
    </div>
    <div>
        <a id="registerBtn" class="btn btn-default submit" href="#">Register</a>
    </div>
    <div class="clearfix"></div>
    <div class="separator">
        <p class="change_link">
            Already a member ?
            <a href="#signin" class="to_register"> Log In </a>
        </p>
        <div class="clearfix"></div>
        <br />
        <div>
            <h1><i class="fa fa-bug"></i> Gentelella Alela!</h1>
            <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
        </div>
    </div>
}

@section scripts {
    <script>
        $("#registerBtn").click(function () {
            $("#registerForm").submit();
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}